{% extends 'base.html.twig' %}


{% set total=0 %}
{% block body %}
<table class="table table-striped table-inverse table-responsive" style="font-size:40px;">
		<thead class="thead-inverse">
			<tr>
				<th>Nomb</th>						
				<th>Cant</th>
				<th>Tot.</th>
				<th>Fia</th>
				<th></th>
			</tr>
		</thead>
		<tbody>


			{% for pedidocliente in pedidoscliente %}

				<tr>
					<td>{{pedidocliente.nombre}}</td>
					<td>{{pedidocliente.cantidad}}</td>
					<td>{{ pedidocliente.valor * pedidocliente.cantidad }}</td>
					<td>
					{% if pedidocliente.fiado %}
						<span class="badge badge-pill badge-danger">Si</span>
					{% endif %}
					</td>
					<td><a href="{{ path('editarpedido', {'idpedido':pedidocliente.id} ) }}" class="btn btn-sm btn-warning" style="font-size:30px;">Edit</a></td>
					<td><a href="{{ path('borrarpedido', {'idpedido':pedidocliente.id} ) }}" class="btn btn-sm btn-danger" style="font-size:30px;">Borr</a></td>
					{% set total = total + (pedidocliente.valor * pedidocliente.cantidad) %}

				</tr>

			{% endfor %}

			<div style="font-size:40px;" class="text text-success text-bold" >**Total: ${{total}}</div>
		</tbody>
	</table>
        
{% endblock %}

