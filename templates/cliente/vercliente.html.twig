{% extends 'base.html.twig' %}

{% set total = 0 %}
{% block body %}


	
	<table class="table table-striped table-inverse table-responsive">

		<tbody>
			<tr>{{form_start(form)}}
				<td style="font-size:60px;">{{form_label(form.lugar)}}</td>
				<td>{{form_widget(form.lugar, {'attr':{'class':'','style':'width: 60%; font-size:60px;'}} )}}</td>
			</tr>
			<tr>
				<td style="font-size:60px;">{{form_label(form.cliente)}}</td>
				<td>{{form_widget(form.cliente, {'attr':{'class':'','style':'width: 60%; font-size:60px;'}} )}}</td>
			</tr>
			<tr>
				<td></td>			
				<td style="font-size:40px;">{{form_widget(form.submit)}}</td>
			</tr>{{form_end(form)}}
		</tbody>
	</table>

	<table class="table table-striped table-inverse table-responsive" style="font-size:40px;">
		<thead class="thead-inverse">
			<tr>
				<th>Nomb</th>
				<th>Apel</th>
				<th>Luga</th>
				<th></th>
			</tr>
		</thead>
		<tbody>


			{% for cliente in clientes %}

				<tr>
					<td>{{cliente.nombre[:6]}}</td>
					<td>{{cliente.apellido[:6]}}</td>
					<td>{{cliente.lugarnombre[:6]}}</td>
					<td><a href="{{ path('areacliente', {'idcliente':cliente.id, 'nombrecliente':cliente.nombre} )}}" class="badge badge-info" style="font-size:30px;">Ver</a></td>
					<td><a href="{{ path('editarcliente', {'idcliente':cliente.id} )}}" class="badge badge-warning" style="font-size:30px;">Edi</a></td>
				</tr>

			{% endfor %}			
		</tbody>
	</table>

{% endblock %}
